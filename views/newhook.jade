html
	head
		style
			include ../public/components/bootstrap/dist/css/bootstrap.min.css
		title Create new Hook
	body
		.container
			.row
				.col-xs-10.col-sm-10.col-md-10.col-lg-10
					.panel.panel-default
						.panel-heading
							h3 Neuen Hook Regestrieren:
						.panel-body
							div
								legend IDModel Hooken
								.form-group
									label(for='hookid') ID:
									input.form-control(name='hookid' ,type='text', placeholder='Bsp.: 1234gasdc12351')
									label(for='hooktype') Type:
									select.form-control(name='hooktype')
										option(value ='ListHook') List
										option(value ='BoardHook') Board
										option(value ='CardHook') Card
									p
									button#regHookForm.btn.btn-primary Submit
	
		script
			include ../public/components/jquery/dist/jquery.js
			include ../public/components/bootstrap/dist/js/bootstrap.js
			include ../public/js/newhook.js